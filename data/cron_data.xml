<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Scheduled Test Execution (disabled by default) -->
        <record id="cron_qa_scheduled_tests" model="ir.cron">
            <field name="name">QA: Scheduled Test Execution</field>
            <field name="model_id" ref="model_qa_test_suite"/>
            <field name="state">code</field>
            <field name="code">
# This cron is a placeholder - individual suites have their own crons
# model.search([('scheduled', '=', True)]).action_scheduled_run()
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="False"/>
        </record>
        
        <!-- Cleanup Old Results (weekly) -->
        <record id="cron_qa_cleanup_results" model="ir.cron">
            <field name="name">QA: Cleanup Old Results</field>
            <field name="model_id" ref="model_qa_test_result"/>
            <field name="state">code</field>
            <field name="code">
# Keep only last 90 days of results
from datetime import datetime, timedelta
cutoff = datetime.now() - timedelta(days=90)
old_results = model.search([('execution_date', '&lt;', cutoff)])
old_results.unlink()
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
