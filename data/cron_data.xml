<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Health Check Scheduler -->
        <record id="ir_cron_health_check" model="ir.cron">
            <field name="name">QA: Run Scheduled Health Checks</field>
            <field name="model_id" ref="model_qa_health_check"/>
            <field name="state">code</field>
            <field name="code">model.run_scheduled_checks()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>
        
        <!-- Jenkins Status Polling -->
        <record id="ir_cron_check_jenkins_status" model="ir.cron">
            <field name="name">QA: Check Jenkins Build Status</field>
            <field name="model_id" ref="model_qa_test_run"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_jenkins_status()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
