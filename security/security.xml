<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_qa_user" model="res.groups">
        <field name="name">QA User</field>
        <field name="category_id" ref="base.module_category_productivity"/>
        <field name="comment">Can view and run tests</field>
    </record>
    
    <record id="group_qa_manager" model="res.groups">
        <field name="name">QA Manager</field>
        <field name="category_id" ref="base.module_category_productivity"/>
        <field name="implied_ids" eval="[(4, ref('group_qa_user'))]"/>
        <field name="comment">Can create specs, generate tests, configure settings</field>
    </record>
    
    <record id="group_qa_admin" model="res.groups">
        <field name="name">QA Administrator</field>
        <field name="category_id" ref="base.module_category_productivity"/>
        <field name="implied_ids" eval="[(4, ref('group_qa_manager'))]"/>
        <field name="comment">Full access to QA Testing module</field>
    </record>
    
    <!-- Record Rules -->
    <record id="rule_qa_spec_user" model="ir.rule">
        <field name="name">QA User: Read All Specs</field>
        <field name="model_id" ref="model_qa_test_spec"/>
        <field name="groups" eval="[(4, ref('group_qa_user'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <record id="rule_qa_spec_manager" model="ir.rule">
        <field name="name">QA Manager: Full Access to Specs</field>
        <field name="model_id" ref="model_qa_test_spec"/>
        <field name="groups" eval="[(4, ref('group_qa_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
</odoo>
