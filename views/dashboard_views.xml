<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Action - Simple redirect to Test Suites with stats -->
    <!-- Custom OWL dashboard can be added later -->
    <record id="action_qa_dashboard" model="ir.actions.act_window">
        <field name="name">QA Dashboard</field>
        <field name="res_model">qa.test.suite</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first test suite!
            </p>
            <p>
                Test suites group related test specifications and cases together.
                Start by creating a suite, then add specifications.
            </p>
        </field>
    </record>
</odoo>
