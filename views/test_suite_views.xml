<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Test Suite Form View -->
    <record id="view_qa_test_suite_form" model="ir.ui.view">
        <field name="name">qa.test.suite.form</field>
        <field name="model">qa.test.suite</field>
        <field name="arch" type="xml">
            <form string="Test Suite">
                <header>
                    <button name="action_run_suite" type="object" 
                            string="Run Suite" class="btn-primary"
                            invisible="test_case_count == 0"/>
                    <button name="action_generate_all_tests" type="object" 
                            string="Generate All Tests" class="btn-secondary"
                            invisible="spec_count == 0"/>
                    <button name="action_export_robot_files" type="object" 
                            string="Export Files" class="btn-secondary"
                            invisible="test_case_count == 0"/>
                    <button name="action_enable_schedule" type="object" 
                            string="Enable Schedule" class="btn-secondary"
                            invisible="scheduled"/>
                    <button name="action_disable_schedule" type="object" 
                            string="Disable Schedule" class="btn-secondary"
                            invisible="not scheduled"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_specs" type="object" 
                                class="oe_stat_button" icon="fa-file-text-o">
                            <field name="spec_count" widget="statinfo" string="Specs"/>
                        </button>
                        <button name="action_view_test_cases" type="object" 
                                class="oe_stat_button" icon="fa-list-alt">
                            <field name="test_case_count" widget="statinfo" string="Tests"/>
                        </button>
                        <button name="action_view_runs" type="object" 
                                class="oe_stat_button" icon="fa-play-circle">
                            <field name="run_count" widget="statinfo" string="Runs"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Scheduled" bg_color="bg-success"
                            invisible="not scheduled"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Suite Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="state" readonly="1"/>
                        </group>
                        <group>
                            <field name="include_tags"/>
                            <field name="exclude_tags"/>
                            <field name="output_dir"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Specifications" name="specs">
                            <field name="spec_ids">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="module_id"/>
                                    <field name="test_case_count"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Test Cases" name="tests">
                            <field name="test_case_ids">
                                <tree>
                                    <field name="test_id"/>
                                    <field name="name"/>
                                    <field name="category"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state == 'passed'"
                                           decoration-danger="state in ['failed', 'error']"/>
                                    <field name="pass_rate" widget="progressbar"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Execution Settings" name="settings">
                            <group>
                                <group string="Execution">
                                    <field name="parallel_execution"/>
                                    <field name="max_workers" invisible="not parallel_execution"/>
                                    <field name="fail_fast"/>
                                </group>
                                <group string="Schedule">
                                    <field name="scheduled"/>
                                    <field name="schedule_interval" invisible="not scheduled"/>
                                    <field name="schedule_time" invisible="not scheduled" 
                                           widget="float_time"/>
                                    <field name="cron_id" readonly="1" invisible="not scheduled"/>
                                </group>
                            </group>
                        </page>
                        <page string="Last Run" name="last_run" invisible="not last_run_id">
                            <group>
                                <group>
                                    <field name="last_run_id" readonly="1"/>
                                    <field name="last_run_date" readonly="1"/>
                                    <field name="last_run_status" readonly="1" widget="badge"
                                           decoration-success="last_run_status == 'passed'"
                                           decoration-danger="last_run_status in ['failed', 'error']"/>
                                </group>
                                <group>
                                    <field name="pass_rate" readonly="1" widget="progressbar"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Test Suite Tree View -->
    <record id="view_qa_test_suite_tree" model="ir.ui.view">
        <field name="name">qa.test.suite.tree</field>
        <field name="model">qa.test.suite</field>
        <field name="arch" type="xml">
            <tree string="Test Suites">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="spec_count"/>
                <field name="test_case_count"/>
                <field name="run_count"/>
                <field name="last_run_status" widget="badge"
                       decoration-success="last_run_status == 'passed'"
                       decoration-danger="last_run_status in ['failed', 'error']"
                       decoration-warning="last_run_status == 'running'"/>
                <field name="pass_rate" widget="progressbar"/>
                <field name="scheduled"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_qa_test_suite" model="ir.actions.act_window">
        <field name="name">Test Suites</field>
        <field name="res_model">qa.test.suite</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first test suite
            </p>
            <p>
                Group test specifications into suites for organized execution 
                and reporting.
            </p>
        </field>
    </record>
</odoo>
