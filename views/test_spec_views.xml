<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Test Spec Form View -->
    <record id="view_qa_test_spec_form" model="ir.ui.view">
        <field name="name">qa.test.spec.form</field>
        <field name="model">qa.test.spec</field>
        <field name="arch" type="xml">
            <form string="Test Specification">
                <header>
                    <button name="action_analyze_module" type="object" 
                            string="Analyze Module" class="btn-secondary"
                            invisible="state not in ['draft']"/>
                    <button name="action_generate_tests" type="object" 
                            string="Generate Tests" class="btn-primary"
                            invisible="state not in ['draft', 'analyzed']"/>
                    <button name="action_regenerate_tests" type="object" 
                            string="Regenerate Tests" class="btn-secondary"
                            invisible="state != 'generated'"/>
                    <button name="action_reset_to_draft" type="object" 
                            string="Reset to Draft" class="btn-secondary"
                            invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,analyzed,generated"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_tests" type="object" 
                                class="oe_stat_button" icon="fa-list-alt"
                                invisible="test_case_count == 0">
                            <field name="test_case_count" widget="statinfo" string="Tests"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Specification Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="module_id" options="{'no_create': True}"/>
                            <field name="category"/>
                            <field name="priority"/>
                            <field name="suite_id"/>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" 
                                   options="{'color_field': 'color'}"/>
                            <field name="created_by_id" readonly="1"/>
                            <field name="last_generated_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Specification" name="specification">
                            <group>
                                <field name="description" placeholder="Brief description of what this test covers..."/>
                            </group>
                            <separator string="Functional Specification"/>
                            <field name="specification" placeholder="Write your functional specification here. Be specific about:
- What actions the user should perform
- What data should be entered
- What results are expected
- Any specific validations needed

Example:
1. User navigates to Invoicing > Customers > Invoices
2. User clicks 'New' to create a new invoice
3. User selects customer 'Test Company'
4. User adds a product line with Product: 'Service', Quantity: 2, Price: 500
5. User clicks 'Confirm' to validate the invoice
6. Verify the invoice status changes to 'Posted'
7. Verify the total amount is 1000"/>
                            <group>
                                <group>
                                    <field name="preconditions" placeholder="Any setup required before the test..."/>
                                </group>
                                <group>
                                    <field name="postconditions" placeholder="Expected state after test completion..."/>
                                </group>
                            </group>
                        </page>
                        <page string="Module Analysis" name="analysis">
                            <group>
                                <field name="analysis_date" readonly="1"/>
                            </group>
                            <group>
                                <group string="Detected Models">
                                    <field name="analyzed_models" nolabel="1" readonly="1"/>
                                </group>
                                <group string="Detected Views">
                                    <field name="analyzed_views" nolabel="1" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Detected Fields">
                                    <field name="analyzed_fields" nolabel="1" readonly="1"/>
                                </group>
                                <group string="Detected Buttons">
                                    <field name="analyzed_buttons" nolabel="1" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Generated Tests" name="tests" invisible="test_case_count == 0">
                            <field name="test_case_ids" readonly="1">
                                <list>
                                    <field name="test_id"/>
                                    <field name="name"/>
                                    <field name="category"/>
                                    <field name="state" widget="badge" 
                                           decoration-success="state == 'passed'"
                                           decoration-danger="state == 'failed'"
                                           decoration-warning="state == 'error'"/>
                                    <field name="last_run_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Generation Log" name="log" invisible="not generation_log">
                            <field name="generation_log" readonly="1"/>
                            <field name="error_message" readonly="1" 
                                   invisible="not error_message"
                                   class="text-danger"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Test Spec Tree View -->
    <record id="view_qa_test_spec_tree" model="ir.ui.view">
        <field name="name">qa.test.spec.tree</field>
        <field name="model">qa.test.spec</field>
        <field name="arch" type="xml">
            <list string="Test Specifications" default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="customer_id" optional="show"/>
                <field name="name"/>
                <field name="module_id"/>
                <field name="category"/>
                <field name="priority"/>
                <field name="suite_id"/>
                <field name="test_case_count"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'generated'"
                       decoration-info="state == 'analyzed'"
                       decoration-danger="state == 'error'"/>
                <field name="tag_ids" widget="many2many_tags" 
                       options="{'color_field': 'color'}"/>
            </list>
        </field>
    </record>
    
    <!-- Test Spec Kanban View -->
    <record id="view_qa_test_spec_kanban" model="ir.ui.view">
        <field name="name">qa.test.spec.kanban</field>
        <field name="model">qa.test.spec</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="state"/>
                <field name="category"/>
                <field name="test_case_count"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="module_id"/>
                                    <br/>
                                    <span class="badge badge-pill badge-info">
                                        <field name="test_case_count"/> tests
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="tag_ids" widget="many2many_tags" 
                                               options="{'color_field': 'color'}"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Test Spec Search View -->
    <record id="view_qa_test_spec_search" model="ir.ui.view">
        <field name="name">qa.test.spec.search</field>
        <field name="model">qa.test.spec</field>
        <field name="arch" type="xml">
            <search string="Search Specifications">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="module_id"/>
                <field name="suite_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Analyzed" name="analyzed" domain="[('state', '=', 'analyzed')]"/>
                <filter string="Generated" name="generated" domain="[('state', '=', 'generated')]"/>
                <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                <separator/>
                <filter string="Critical" name="critical" domain="[('priority', '=', '3')]"/>
                <filter string="High Priority" name="high" domain="[('priority', '=', '2')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Module" name="group_module" context="{'group_by': 'module_id'}"/>
                    <filter string="Suite" name="group_suite" context="{'group_by': 'suite_id'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'category'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_qa_test_spec" model="ir.actions.act_window">
        <field name="name">Test Specifications</field>
        <field name="res_model">qa.test.spec</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_qa_test_spec_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first test specification
            </p>
            <p>
                Write functional specifications in plain text and let AI generate 
                Robot Framework tests automatically.
            </p>
        </field>
    </record>
    
    <!-- Test Tag Views -->
    <record id="view_qa_test_tag_tree" model="ir.ui.view">
        <field name="name">qa.test.tag.tree</field>
        <field name="model">qa.test.tag</field>
        <field name="arch" type="xml">
            <list string="Tags" editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
                <field name="description"/>
            </list>
        </field>
    </record>
    
    <record id="action_qa_test_tag" model="ir.actions.act_window">
        <field name="name">Test Tags</field>
        <field name="res_model">qa.test.tag</field>
        <field name="view_mode">list</field>
    </record>
</odoo>
